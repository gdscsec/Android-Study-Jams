<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    tools:context=".Studentdashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/student_dashboard_banner"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/student_photo"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:src="@drawable/profile"
                android:layout_height="100dp"
                />
            <TextView
                android:id="@+id/student_name"
                android:layout_marginTop="35dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/student_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THARUNRAJ"
                android:textColor="@color/black"/>

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/student_course"
                android:layout_below="@+id/student_name"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/student_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.Tech/BE - "
                android:textColor="#595959"/>

            <TextView
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/student_dept"
                android:textStyle="bold"
                android:layout_below="@+id/student_name"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:layout_toRightOf="@+id/student_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / IT"
                android:textColor="#595959"/>


        </RelativeLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="PERSONAL DETAILS"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:background="#F8F8FF"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:drawablePadding="5dp"
            />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/student_profile_bg">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="SEC19IT014"
                    android:background="#E6E6FA"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_account_box"/>

                <TextView
                    android:id="@+id/student_regno"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="412519205147"
                    android:background="#E6E6FA"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_edit_note"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_mail"
                    android:background="#E6E6FA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="tharunkathir2001@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_email"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_phno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="9841982242"
                    android:background="#E6E6FA"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"/>

                <TextView
                    android:id="@+id/student_dob"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="29-08-2001"
                    android:background="#E6E6FA"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today"/>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="EDUCATION"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:background="#F8F8FF"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:drawablePadding="5dp"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/student_education_bg">

                    <TextView
                        android:id="@+id/student_course_clg"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="B.E / B.Tech"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:background="#B0C4DE"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/student_clgname"
                            android:background="#B0C4DE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="sri sairam engineering collgeg"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_school"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/student_clgyear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="2019-23"
                            android:background="#B0C4DE"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_calendar_today"/>

                        <TextView
                            android:id="@+id/student_clgsem"
                            android:layout_marginLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="II SEM"
                            android:background="#B0C4DE"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_edit_note"/>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/student_education_bg">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="HSC"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:background="#B0C4DE"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/student_hsc_school_name"
                            android:background="#B0C4DE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="sri sairam engineering collgeg"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_school"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/student_hsc_school_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="2019-23"
                            android:background="#B0C4DE"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_calendar_today"/>

                        <TextView
                            android:id="@+id/student_hsc_school_board"
                            android:layout_marginLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="STATE"
                            android:background="#B0C4DE"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/board"/>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="250dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/student_education_bg">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="SSLC"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:background="#B0C4DE"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:drawablePadding="5dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/student_slsc_school_name"
                            android:background="#B0C4DE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="sri sairam engineering collgeg"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_school"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/student_slsc_school_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="2019-23"
                            android:background="#B0C4DE"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_calendar_today"/>

                        <TextView
                            android:id="@+id/student_slsc_school_board"
                            android:layout_marginLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="STATE"
                            android:background="#B0C4DE"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/board"/>


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>



        </HorizontalScrollView>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="PERFOMANCE"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:background="#F8F8FF"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:drawablePadding="5dp"
            />

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/graph_bg">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:ignore="MissingClass" />

    </LinearLayout>

        <Button
            android:id="@+id/logout_student_dashboard"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_below="@+id/dummy_staff"
            android:layout_marginTop="17dp"
            android:text="LOGOUT"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20sp"
            android:background="@drawable/login_btn_bg"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>


</ScrollView>